<body>
<div class="row" style="margin-bottom: 70px">
  <div class="col-md-offset-1 " >
  	<h3>Hello <span class="label label-primary"><%= name%></span></h3>
  </div>
  <div class="col-md-offset-9 ">
    <button class="btn btn-danger" id="logout">LogOut</button>
  </div>
</div>
<div class="col-md-7 col-md-offset-2 ">
<div class="form-group">
  <label for="usr">Sender:</label>
  <input type="text" class="form-control" id="sendr" value=<%= email%>>
</div>
<div class="form-group">
  <label for="pwd">Recipients:</label>
  <input type="text" class="form-control" id="recp">
</div>
<div class="row">
  <div class="btn-group" style="margin-top: 30px" id="tempMenu">
    <button type="button" class="btn btn-danger" id="tempSel">Select Templates</button>
    <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="caret"></span>
      <span class="sr-only">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu">
    </ul>
  </div>
  <div class="col-md-offset-7">
    <button class="btn btn-success" id="edit">Editing Disabled</button>
  </div>
</div>
<div class="form-group" style="margin-top: 30px">
  <label for="comment">Template:</label>
  <textarea class="form-control" rows="5" id="temp"></textarea>
</div>
<button class="btn btn-primary btn-lg" id="sendBtn">Send Mail</button>
</div>
<form id="file-form" enctype="multipart/form-data" method="POST">
	<div class="col-md-offset-2 col-md-4 control-group" style="margin-top: 70px">
	<input id="contacts" type="file" class="filestyle" data-classButton="btn btn-primary" data-input="false" data-classIcon="icon-plus" data-buttonText="Upload CSV" onchange="testing()">
	</div>
</form>
